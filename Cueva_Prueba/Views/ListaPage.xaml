<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cueva_Prueba.Views.ListaPage"
             Title="ListaPage">
    <CollectionView ItemsSource="{Binding Recetas}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Margin="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                        <Label Text="{Binding Ingredientes}" />
                        <Label Text="{Binding TiempoPreparacionMinutos, StringFormat='Tiempo: {0} minutos'}" />
                        <Label Text="{Binding EsVegetariana, StringFormat='Vegetariana: {0}'}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>