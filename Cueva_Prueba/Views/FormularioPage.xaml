<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cueva_Prueba.Views.FormularioPage"
             Title="FormularioPage">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Esteban Cueva - 03/13/2004" FontAttributes="Bold" FontSize="Medium" />
            <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
            <Editor Placeholder="Ingredientes" Text="{Binding Ingredientes}" AutoSize="TextChanges" />
            <Entry Placeholder="Tiempo (min)" Keyboard="Numeric" Text="{Binding TiempoPreparacion}" />
            <CheckBox IsChecked="{Binding EsVegetariana}" />
            <Label Text="Â¿Es vegetariana?" />
            <Button Text="Guardar" Command="{Binding GuardarRecetaCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>